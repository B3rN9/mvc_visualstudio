@model ComicBookGallery.Models.ComicBook[]

@{
    ViewBag.Title = "Index";
}

<h2>@ViewBag.Title</h2>

<div class="row">

    @foreach (var item in Model)
    {
        <div class="col-md-3">
            <h4>@Html.ActionLink( item.SeriesTitle + "#" + item.IssueNumber,  "Detail", new { id = item.Id })</h4>
            <a href="@Url.Action("Detail", new { id = item.Id })">
                <img src="~/Images/@item.DisplayImg" alt="@item.DisplayText" class="img-responsive" />
            </a>
        </div>
    }
        



</div>

